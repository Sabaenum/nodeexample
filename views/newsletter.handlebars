<h2>Sing up for Newsletter</h2>
<div class="formContainer">
    <form action="/process?from=newsletter" role="form" class="form-horizontal newLetterForm" method="POST">
    <input type="hidden" value="{{csrf}}" name="csrf">
    <div class="form-group">
        <label for="fieldName" class="col-sm-2 control-label">Name</label>
            <div class="col-sm-4">
            <input class="form-control" type="text" name="name" id="fieldName">
            </div>
    </div>
    <div class="form-group">
        <label for="fieldEmail" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="email" id="fieldEmail" required>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-2">
        <button type="submit" class="btn btn-default">Register</button>
        </div>
    </div>
</form>
</div>
{{#section 'jquery'}}
<script>
    $(document).ready(function () {
        $('.newLetterForm').on('submit',function (env) {
            env.preventDefault();
            var action = $(this).attr('action');
            var $container = $(this).closest('.formContainer');
            $.ajax({
                url:action,
                type:'POST',
                success: function (data) {
                    if(data.success){
                        $container.html('<h2>Thanks You</h2>');
                    } else {
                        $container.html('There was a problem');
                    }

                },
                error: function () {
                    $container.html('There was a problem');
                }
            })
        })
    });
</script>
{{/section}}