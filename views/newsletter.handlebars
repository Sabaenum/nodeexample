<h2>Sing up for Newsletter</h2>
<form action="/process?from=newsletter" role="form" class="form-horizontal" method="POST">
    <input type="hidden" value="{{csrf}}" name="csrf">
    <div class="form-group">
        <label for="fieldName" class="col-sm-2 control-label">Name</label>
            <div class="col-sm-4">
            <input class="form-control" type="text" name="name" id="fieldName">
            </div>
    </div>
    <div class="form-group">
        <label for="fieldEmail" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="email" id="fieldEmail" required>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-2">
        <button type="submit" class="btn btn-default">Register</button>
        </div>
    </div>

</form>